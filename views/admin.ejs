<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1>Admin Panel - Manage Hotels</h1>

    <!-- Add Hotel Form -->
    <form action="/admin/hotels" method="POST" enctype="multipart/form-data" class="mb-5">
      <div class="form-group">
        <label for="name">Hotel Name</label>
        <input type="text" name="name" id="name" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="address" id="address" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="logo">Logo</label>
        <input type="file" name="logo" id="logo" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Hotel</button>
    </form>

    <!-- Hotel List -->
    <h2>Registered Hotels</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Logo</th>
          <th>QR Code</th>
        </tr>
      </thead>
      <tbody>
        <% hotels.forEach(hotel => { %>
          <tr>
            <td><%= hotel.name %></td>
            <td><%= hotel.address %></td>
            <td><img src="<%= hotel.logo %>" alt="Hotel Logo" style="width: 100px;"></td>
            <td><img src="<%= hotel.qrCode %>" alt="QR Code" style="width: 100px;"></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
